{
  "compilerOptions": {
    "baseUrl": "./src/",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "noUnusedLocals": true,
    "jsx": "preserve",
    "noEmit": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
